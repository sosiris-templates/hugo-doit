{
    "$schema": "https://docs.renovatebot.com/renovate-schema.json",
    "extends": [
        "config:base"
    ],
    "packageRules": [
        {
          "matchUpdateTypes": ["minor", "patch", "pin", "digest"],
          "automerge": true
        }
    ],
    "git-submodules": {
      "enabled": true
    },
    "platformAutomerge": true,
    "automergeStrategy": "squash"
  }
